<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/primary_purple"
    android:orientation="vertical"
    tools:context=".Activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/primary_purple"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow_setting"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:padding="@dimen/_5sdp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/spartan_bold"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <!--   <ImageView

               android:layout_width="@dimen/_24sdp"
               android:layout_height="@dimen/_24sdp"
               android:layout_gravity="center"
               android:layout_margin="@dimen/_5sdp"
               android:background="@drawable/ic_baseline_check_circle_outline_24"
               android:padding="@dimen/_5sdp"
               app:tint="@color/white" />
               !-->

        <ImageView
            android:id="@+id/img_logOut"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/off" />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_image"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/primary_purple"
        app:civ_border_width="@dimen/_2sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/upper_corner_shape"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_user"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Name:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/setting_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@null"
                android:clickable="true"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:fontFamily="@font/spartan_regular"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_info_button"
                android:gravity="center"
                android:padding="5dp"
                android:text=" About:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/setting_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="-8dp"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:fontFamily="@font/spartan_thin"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="hey there i'm using this chatit app"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/save"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/edtext_shape"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_22sdp"
                android:gravity="center"
                android:text="App Version:"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:text="1.1.1"
                android:textColor="@color/black"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>